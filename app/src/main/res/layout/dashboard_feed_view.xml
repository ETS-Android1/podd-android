<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:id="@+id/report_main_scrollview"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout android:id="@+id/report_view_content"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="10dp">

        <HorizontalScrollView
            android:id="@+id/report_image_list_scrollview"
            android:hapticFeedbackEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/report_image_list"
                android:orientation="horizontal"
                android:background="#900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_select_flag"/>
            <TextView
                android:id="@+id/report_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginStart="10sp"
                android:text="Flag"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Images (if available)" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_summary"
                android:textStyle="bold" />
            <TableLayout
                android:id="@+id/report_view_summary_table"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/report_date"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_report_date"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/report_incidentDate"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_report_incidentDate"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/report_type"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_report_type"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/report_area"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_report_area"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/by"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_report_created_by"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/reporter_telephone"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_reporter_telephone"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:paddingBottom="2dp"
                    android:background="@drawable/bg_border_dashed">
                    <TextView android:text="@string/reporter_project_telephone"
                        android:padding="2dp" />
                    <TextView
                        android:id="@+id/report_view_reporter_project_telephone"
                        android:padding="2dp"
                        android:background="#fff"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/form_data_explanation"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/report_view_form_data_explanation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/report_follow_up_title"
                android:text="@string/follow_up_reports"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/report_follow_up_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></ListView>
            <TextView
                android:id="@+id/empty_follow_up_list_text"
                android:text="@string/empty_follow_up_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/content_comment"
            android:layout_width="fill_parent"
            android:layout_height="100dp">
        </FrameLayout>
    </LinearLayout>
</ScrollView>

    <ProgressBar android:id="@+id/loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
