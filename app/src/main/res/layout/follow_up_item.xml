<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/feed_card"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8.33dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        card_view:contentPaddingLeft="13.33dp"
        card_view:contentPaddingRight="13.33dp"
        card_view:contentPaddingTop="8.33dp"
        card_view:contentPaddingBottom="13.33dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/df_item_flag"
                    android:layout_width="16.67dp"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/df_item_report_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="@string/dummy_report_type" />
                        <TextView
                            android:id="@+id/df_item_timeago"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/wallet_dim_foreground_disabled_holo_dark"
                            android:text="@string/dummy_report_timeago" />
                    </LinearLayout>

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/df_item_description"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:ellipsize="end"
                        android:layout_marginTop="10dp"
                        android:text="@string/dummy_report_description" />
                </LinearLayout>


             </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>