<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cm.podd.report.fragment.ReportInfoFragment">


    <ScrollView
        android:id="@+id/report_main_scrollview"
        android:layout_below="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout android:id="@+id/report_view_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="0dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-12dp"
                        android:layout_marginStart="-12dp"
                        android:layout_marginRight="-12dp"
                        android:layout_marginEnd="-12dp"
                        android:padding="0dp"
                        android:clipToPadding="true"
                        android:clipChildren="true">
                        <HorizontalScrollView
                            android:id="@+id/report_image_list_scrollview"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="13dp"
                            android:layout_marginRight="0dp"
                            android:paddingLeft="23dp"
                            android:paddingRight="23dp"
                            android:hapticFeedbackEnabled="false"
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:clipChildren="false">

                            <LinearLayout
                                android:id="@+id/report_image_list"
                                android:orientation="horizontal"
                                android:background="@null"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></LinearLayout>

                        </HorizontalScrollView>
                    </RelativeLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/view_report_header_bg" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_report" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/report_summary"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView android:text="@string/report_type"
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/report_view_report_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:padding="2dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView android:text="@string/report_date"
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"  />
                                <TextView
                                    android:id="@+id/report_view_report_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:padding="2dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp">
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView android:text="@string/report_incidentDate"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:textSize="18sp"
                                android:textStyle="bold"  />
                            <TextView
                                android:id="@+id/report_view_report_incidentDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView android:text="@string/report_area"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:textSize="18sp"
                                android:textStyle="bold"  />
                            <TextView
                                android:id="@+id/report_view_report_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView android:text="@string/by"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:textSize="18sp"
                                android:textStyle="bold"  />
                            <TextView
                                android:id="@+id/report_view_report_created_by"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView android:text="@string/reporter_telephone"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/report_view_reporter_telephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reporter_project_telephone_layout"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView android:text="@string/reporter_project_telephone"
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/report_view_reporter_project_telephone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:padding="2dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/view_report_header_bg" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_questionnaire" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/data_explanation"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="@string/form_data_explanation"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/report_view_form_data_explanation"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"/>

                        <LinearLayout
                            android:background="@color/report_row_divider"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp">
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/expanded_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#DD000000"
                        android:visibility="invisible"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="83dp"
                card_view:cardCornerRadius="0dp">


                <LinearLayout
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/view_report_header_bg" >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_placeholder" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_gravity="center_vertical"
                            android:text="@string/report_map"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <fragment
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment" />

                        <LinearLayout
                            android:id="@+id/map_button"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:background="@drawable/button_round_corner"
                            android:layout_marginTop="6dp"
                            android:layout_marginBottom="11dp"
                            android:layout_width="match_parent"
                            android:layout_height="33dp">

                            <TextView
                                android:text="@string/go_to_map"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginLeft="7dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/case_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#90000000"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/case_dialog_title"
                style="?android:textAppearanceSearchResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:text="@string/choose_case"/>

            <ScrollView
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white">

                <RadioGroup
                    android:id="@+id/case_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                </RadioGroup>
            </ScrollView>

            <RadioButton
                android:id="@+id/case_choice_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice here"
                android:textSize="12sp"
                android:visibility="gone">
            </RadioButton>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:background="@color/white">

                <Button
                    android:id="@+id/ok_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/choose" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/case_dialog_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/report_not_found">
    </TextView>

</FrameLayout>
