<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/feed_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        card_view:contentPadding="10dp"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation">



        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp">

            <ImageView
                android:id="@+id/df_item_flag"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icon_flag" />

            <TextView
                android:id="@+id/df_item_report_type"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:ellipsize="marquee"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="100dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="100dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Report type" />

            <TextView
                android:id="@+id/df_item_timeago"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textColor="@color/wallet_dim_foreground_disabled_holo_dark"
                android:text="3 days ago" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginTop="32dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:text="Location of report by administration area" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp">

            <ImageView
                android:id="@+id/df_item_thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_launcher"/>

            <TextView
                android:id="@+id/df_item_animal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Animal type"/>

            <TextView
                android:id="@+id/df_item_description"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"
                android:ellipsize="end"
                android:text="Description here to inform user that something happened." />
        </FrameLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>